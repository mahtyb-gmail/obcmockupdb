<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :length, priority: [ "Feature" ], collection: [ "Feature",
	 	"TV Pilot", "Episode", "Short", "Spot" ], :include_blank => false %>
    <%= f.input :project_type, priority: [ "Fiction" ], collection: [ "Fiction", 
	 	"Nonfiction", "Art/Experimental"], :include_blank => false %>
    <%= f.input :hometown %>
    <%= f.input :details %>
    <%= f.input :startdate %>
    <%= f.input :schedule_info %>
	<p>
		Expertise needed:
	</p>
		<%= f.collection_check_boxes :skill_ids, Skill.all, :id, :name, 
		{:item_wrapper_class => 'checkbox_container'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
